<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

   <style name="Image">
        <item name="android:layout_height">175dp</item>
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>

    <style name="Name">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_toRightOf">@id/image</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Desc">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_toRightOf">@id/image</item>
        <item name="android:layout_below">@id/name</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginRight">8dp</item>

    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@id/image</item>
        <item name="android:layout_alignBottom">@id/image</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:progress">50</item>
    </style>

    <style name="settings">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
